{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "@controllers": [
                "./src/controllers/*"
            ]
        }
    }
}
